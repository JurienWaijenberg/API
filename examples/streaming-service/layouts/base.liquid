<html lang="en">
<head>
  {% block head %}
    <title>My First Page</title>
  {% endblock %}
  {% if NODE_ENV == "development" %}
    <script type="module" src="http://localhost:5173/@vite/client" defer></script>
    <script type="module" src="http://localhost:5173/src/index.js" defer></script>
  {% else %}
  <link rel="stylesheet" href="/main.css">
  <link rel="stylesheet" href="/index.css">
  <link rel="stylesheet" href="/poster.css">
  <script type="module" src="/main.js" defer></script>
  <script type="nomodule" src="/polyfills-legacy.js" defer></script>
  <script type="nomodule" src="/main-legacy.js" defer></script>
  {% endif %}
  {% block styles %}{% endblock %}
  {% block scripts %}{% endblock %}
</head>

<body>
  <head>
    <form action="/search" method="get">
      <label for="search">Search</label>
      <input id="search" type="search" name="term">

      <button type="submit">Search</button>
    </form>
  </head>
  {% block content %}{% endblock %}
</body>
</html>
